{
  "breadcrumbs.enabled": false,
  "editor.codeLens": false,
  "editor.colorDecorators": true,
  "editor.detectIndentation": false,
  "editor.dragAndDrop": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.hover.delay": 500,
  "editor.hover.sticky": true,
  "editor.linkedEditing": false,
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.rulers": [ 100 ],
  "editor.scrollbar.vertical": "hidden",        // deprecated but still works
  "editor.scrollbar.verticalScrollbarSize": 0,  // deprecated but still works
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.maxLineCount": 1,
  "editor.stickyScroll.scrollWithEditor": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 1,
  "explorer.confirmDelete": false,
  "explorer.enableDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.ignoreMissingGitWarning": true,
  "notebook.stickyScroll.mode": "flat",
  "terminal.integrated.stickyScroll.maxLineCount": 1,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.stickyScrollMaxItemCount": 1,
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 1,
    "files.trimTrailingWhitespace": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.format": "never",
    "source.fixAll.markdownlint": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/{,.}bin/": true,
    "**/{,.}build/": true,
    "**/{,.}cache/": true,
    "**/{,.}compiled/": true,
    "**/{,.}dist/": true,
    "**/{,.}out/": true,
    "**/.git/": true,
    "**/.github/": true,
    "**/.hooks/": true,
    "**/.husky/": true,
    "**/.idea/": true,
    "**/.next/": true,
    "**/.npm/": true,
    "**/.svn/": true,
    "**/.vs/": true,
    "**/.vscode/": true,
    "**/node_modules/": true,
    "**/*.code-workspace": true,
    "**/*.sublime-project": true,
    "**/*.sublime-workspace": true
  },
  "search.exclude": {
    "**/{,.}bin/": true,
    "**/{,.}build/": true,
    "**/{,.}cache/": true,
    "**/{,.}compiled/": true,
    "**/{,.}dist/": true,
    "**/{,.}out/": true,
    "**/.git/": true,
    "**/.github/": true,
    "**/.hooks/": true,
    "**/.husky/": true,
    "**/.idea/": true,
    "**/.next/": true,
    "**/.npm/": true,
    "**/.svn/": true,
    "**/.vs/": true,
    "**/.vscode/": true,
    "**/node_modules/": true,
    "**/*.7z": true,
    "**/*.ai": true,
    "**/*.app": true,
    "**/*.bin": true,
    "**/*.bmp": true,
    "**/*.code-workspace": true,
    "**/*.com": true,
    "**/*.csv": true,
    "**/*.dat": true,
    "**/*.data": true,
    "**/*.dds": true,
    "**/*.dll": true,
    "**/*.dmg": true,
    "**/*.eof": true,
    "**/*.eot": true,
    "**/*.exe": true,
    "**/*.flv": true,
    "**/*.gif": true,
    "**/*.gz": true,
    "**/*.gzip": true,
    "**/*.ico": true,
    "**/*.iso": true,
    "**/*.jar": true,
    "**/*.jpeg": true,
    "**/*.jpg": true,
    "**/*.log": true,
    "**/*.m4a": true,
    "**/*.mov": true,
    "**/*.mp3": true,
    "**/*.mp4": true,
    "**/*.mpa": true,
    "**/*.oga": true,
    "**/*.ogg": true,
    "**/*.ogm": true,
    "**/*.ogv": true,
    "**/*.ogx": true,
    "**/*.opus": true,
    "**/*.otf": true,
    "**/*.pdf": true,
    "**/*.png": true,
    "**/*.psd": true,
    "**/*.rar": true,
    "**/*.spx": true,
    "**/*.sublime-project": true,
